# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 119

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.{yml,in,txt}]
indent_size = 2
insert_final_newline = false

[*.{conf,sh}]
insert_final_newline = false

[*.{json,svg}]
indent_size = 2
insert_final_newline = ignore
